<?xml version="1.0" encoding="utf-8"?>

<!-- This xml file defines the layout for Text Entry Question Answer Fragment.
     The top-level layout container is a ConstraintLayout. It contains a EditText (a text
     input field) which lets enumerators type in patients' responses at runtime. -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ans_container_txt_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TextAnsFragment">

    <EditText
        android:id="@+id/txt_qn_text_entry_ans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="@string/ans_text_entry"
        android:ems="10"
        android:hint="@string/ans_text_entry"
        android:inputType="text"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>